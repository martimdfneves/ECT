<Page x:Class="Shopping_Agent.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shopping_Agent"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">
    <Grid HorizontalAlignment="Left" Height="410" Margin="10,30,0,0" VerticalAlignment="Top" Width="780">
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="23" Margin="319,158,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="txtUsername_TextChanged"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="340,257,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="319,210,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="235,158,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="247,202,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnSkip" Content="Skip" HorizontalAlignment="Left" Margin="548,257,0,0" VerticalAlignment="Top" Width="75" Click="btnSkip_Click"/>
    </Grid>
</Page>
